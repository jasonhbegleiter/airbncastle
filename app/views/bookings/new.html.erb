  <% if @error %>
    <div class="alert alert-warning">
      <p>Please complete all fields to proceed</p>
    </div>
  <% end %>
    <% if @unavailable %>
    <div class="alert alert-warning">
      <p>Castle unavailable on your chosen dates. Please try again.</p>
    </div>
  <% end %>
<div class="container">
  <div class="row">
    <div class="col-md-7 form-content">

      <div class="content">
        <div class="form-header">
          <h3><%= "Let's get you booked into #{@castle.name.capitalize}" %></h3>
        </div>
        <p class="light-caps">STEP 1</p>
        <%= render 'booking_form' %>
        <hr />
        <%= link_to "Back to castle", castle_path(@castle), class: "btn btn-default" %>
      </div>

    </div>
    <div class="col-md-5">


      <div class="picture-container new-booking-container">
        <div class="card-booking" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.5) 0%, rgba(0,0,0,0) 100%), url('<%= cl_image_path @castle.photo, height: 400, crop: :fill %>');">
          <div class="card-category"><h5>ENTIRE CHATEAU</h5></div>
          <div class="card-description">
            <h3><%= @castle.name %></h3>
            <p><%= @castle.summary %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

