<div class="castle-form">
  <%= simple_form_for [@castle, @booking] do |f| %>
    <%= f.error_notification %>

  <p class="light-form-label">Start Date</p>
  <div class="form-group">
    <%= f.input_field :start_date, class: 'form-control', as: :date, start_year: Date.today.year, placeholder: 'Start Date'  %>
  </div>



  <p class="light-form-label">Number of nights</p>
  <div class="form-group">
    <%= f.input_field :no_of_nights, class: 'form-control', as: :integer, collection: 1..15, placeholder: '10'  %>
  </div>

  <p class="light-form-label">Number of guests</p>
  <div class="form-group">
    <%= f.input_field :no_confirmed_guests, class: 'form-control', as: :integer, collection: 1..15, placeholder: '25' %>
  </div>

  <%= f.submit%>
  <% end %>
</div>
